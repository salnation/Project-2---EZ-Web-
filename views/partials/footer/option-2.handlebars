<div class="footer-basic footerGrey">
        <footer>
            <div class="social">
               {{#if footerOptions.instagram}}
              <a href="{{footerOptions.instagram}}"><i class="fab fa-instagram"></i></a>
			        {{/if}}
              {{#if footerOptions.snapchat}}
              <a href="{{footerOptions.snapchat}}"><i class="fab fa-snapchat-ghost"></i></a>
			        {{/if}}
              {{#if footerOptions.twitter}}
              <a href="{{footerOptions.twitter}}"><i class="fab fa-twitter"></i></a>
			        {{/if}}
              {{#if footerOptions.facebook}}
              <a href="{{footerOptions.facebook}}"><i class="fab fa-facebook-f"></i></a>
			        {{/if}}
              {{#if footerOptions.linkedin}}
              <a href="{{footerOptions.linkedin}}"><i class="fab fa-linkedin-in"></i></a>
			        {{/if}}
            </div>
            <ul class="list-inline">
                {{#each navOptions}}
					<li class="list-inline-item">
						<a href="#" class="jumper" data-target="page-{{lowercase title}}">{{title}}</a>
					</li>
				{{/each}}
            </ul>
